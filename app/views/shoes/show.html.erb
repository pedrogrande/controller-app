<% content_for :title, 'Check out this great shoe: ' + @shoe.name %>

<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @shoe.name %>
</p>

<p>
  <strong>Description:</strong>
  <%= @shoe.description %>
</p>

<p>
  <strong>Price:</strong>
  <%= @shoe.price %>
</p>

<p>
  <strong>Picture:</strong>
  <%= @shoe.picture %>
</p>

<p>
  <strong>Category:</strong>
  <%= link_to @shoe.shoe_category.name, shoe_category_path(@shoe.shoe_category) %>
</p>

<%= link_to 'Edit', edit_shoe_path(@shoe) %> |
<%= link_to 'Back', shoes_path %>
